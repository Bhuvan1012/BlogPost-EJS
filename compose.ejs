<%- include("partials/header") -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="postTitle">Title</label><br>
    <input type="text" class="form-control" name="postTitle" placeholder="Add Title" autocomplete="off">
  </div>
  <div class="form-group">
    <label for="postText">Post</label><br>
    <textarea name="postText" class="form-control" rows="5" cols="80"></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="submit">Publish</button>
</form>
<%- include("partials/footer") -%>
